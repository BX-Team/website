{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "extends": [
        "config:recommended"
    ],
    "groupName": "all dependencies",
    "groupSlug": "all",
    "lockFileMaintenance": {
        "enabled": false
    },
    "separateMajorMinor": true,
    "pruneStaleBranches": true,
    "commitMessagePrefix": "dependency:",
    "labels": [
        "\uD83D\uDD04 dependencies"
    ],
    "packageRules": [
        {
            "groupName": "patch",
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "groupName": "minor",
            "matchUpdateTypes": [
                "minor"
            ],
            "automerge": true,
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "groupName": "all-major",
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false,
            "matchPackageNames": [
                "*"
            ]
        }
    ]
}
